<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    tools:context="com.example.bartosz.listazakupow.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Wpisz Swój Login"
        android:id="@+id/RegisterEditText"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:layout_marginTop="30dp"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="Wpisz hasło"
        android:ems="10"
        android:id="@+id/RegisterPasswordEditText"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_marginTop="30dp"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="Wpisz ponownie hasło"
        android:ems="10"
        android:id="@+id/ConfirmPasswordEditText"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Rejestruj"
        android:id="@+id/RegButton"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
